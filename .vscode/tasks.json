{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "guard",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/tools/protect_header.py",
                "--prefix=",
                "--root=${workspaceFolder}",
                "${fileDirname}"
            ],
            "group": "none",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "format",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/tools/format_all.py",
                "--formatter=${config:clang-format.executable}",
                "--style=${config:clang-format.style}",
                "${fileDirname}"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "cpplint",
            "type": "shell",
            "command": "cpplint",
            "args": [
                "--output=vs7",
                "--linelength=80",
                "--exclude=Build,config.h",
                "--filter=-build/header_guard,-build/c++17",
                "${file}"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build",
                "--config",
                "Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}